{
  "name": "arma-reforger-server-manager",
  "version": "1.0.0",
  "description": "Arma Reforger Server Manager with Web UI",
  "main": "backend/server.js",
  "scripts": {
    "install-all": "npm install && cd frontend && npm install",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon backend/server.js",
    "client": "cd frontend && npm start",
    "build": "cd frontend && npm run build",
    "start": "node backend/server.js"
  },
  "keywords": [
    "arma-reforger",
    "server",
    "manager"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "axios": "^1.6.0",
    "ws": "^8.14.2",
    "node-steam-workshop": "^1.0.0",
    "cheerio": "^1.0.0-rc.12",
    "node-schedule": "^2.1.1",
    "multer": "^1.4.5-lts.1",
    "adm-zip": "^0.5.10",
    "systeminformation": "^5.21.20"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.2"
  }
}

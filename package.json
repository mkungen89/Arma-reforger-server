{
  "name": "arma-reforger-server-manager",
  "version": "3.5.1",
  "description": "Arma Reforger Server Manager (Node API/engine) + Flute CMS UI integration",
  "main": "backend/server.js",
  "scripts": {
    "dev": "nodemon backend/server.js",
    "start": "node backend/server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --maxWorkers=2"
  },
  "keywords": [
    "arma-reforger",
    "server",
    "manager"
  ],
  "author": "",
  "license": "GPL-3.0-or-later",
  "dependencies": {
    "adm-zip": "^0.5.10",
    "axios": "^1.6.0",
    "bcryptjs": "^2.4.3",
    "cheerio": "^1.0.0-rc.12",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "node-schedule": "^2.1.1",
    "systeminformation": "^5.21.20",
    "tail": "^2.2.6",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "./coverage",
    "collectCoverageFrom": [
      "backend/**/*.js",
      "!backend/tests/**",
      "!backend/node_modules/**"
    ],
    "testMatch": [
      "**/backend/tests/**/*.test.js"
    ],
    "testTimeout": 10000
  }
}
